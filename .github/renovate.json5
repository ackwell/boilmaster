{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"replacements:all",
		"workarounds:all"
	],
	// Open PRs at the start of the weekend.
	"timezone": "Australia/Sydney",
	"schedule": [
		"* 0-9 * * 6"
	],
	"packageRules": [
		// Disable renovate by default - we'll opt-in ecosystems as appropriate.
		{
			"matchPackageNames": [
				"*"
			],
			"enabled": false
		},
		// Group all rust package updates
		{
			"matchManagers": [
				"cargo"
			],
			"groupName": "cargo",
			"enabled": true
		},
		// Disable updates for cargo updates that aren't semver-major
		{
			"matchManagers": [
				"cargo"
			],
			"matchUpdateTypes": [
				"patch"
			],
			"enabled": false
		},
		{
			"matchManagers": [
				"cargo"
			],
			"matchUpdateTypes": [
				"minor"
			],
			"matchCurrentVersion": ">=1",
			"enabled": false
		}
	]
}
