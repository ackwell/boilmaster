{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"replacements:all",
		"workarounds:all"
	],
	"packageRules": [
		// Group all rust package updates
		{
			"matchManagers": [
				"rust"
			],
			"groupName": "cargo"
		},
		// Disable updates for cargo updates that aren't semver-major
		{
			"matchManagers": [
				"rust"
			],
			"matchUpdateTypes": [
				"patch"
			],
			"enabled": false
		},
		{
			"matchManagers": [
				"rust"
			],
			"matchUpdateTypes": [
				"minor"
			],
			"matchCurrentVersion": ">=1",
			"enabled": false
		}
	]
}
